/ -binding.pry
%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for(@user, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-4") do |f|
        / = bootstrap_form_for(@user, html: { class: "form-horizontal" }) do |f|
        / %form.form-horizontal
        %header
          %h1 Register
        %fieldset
          = f.email_field :email, label: "Eamil Address"
          = f.password_field :password
          = f.text_field :full_name, label: "Full Name"
          / .form-group
          /   %label.control-label.col-sm-2 Email Address
          /   .col-sm-6
          /     %input.form-control(type="email")
          / .form-group
          /   %label.control-label.col-sm-2 Password
          /   .col-sm-6
          /     %input.form-control(type="password")
          / .form-group
          /   %label.control-label.col-sm-2 Full Name
          /   .col-sm-6
          /     %input.form-control(type="text")
        / %fieldset.credit_card
        /   .form-group
        /     %label.control-label.col-sm-2 Credit Card Number
        /     .col-sm-6
        /       %input.form-control(type="text")
        /   .form-group
        /     %label.control-label.col-sm-2 Security Code
        /     .col-sm-6
        /       %input.form-control(type="text")
        /   .form-group
        /     %label.control-label.col-sm-2 Expiration
        /     .col-sm-3
        /       = select_month(Date.today, {add_month_numbers: true},  class: 'form-control')
        /     .col-sm-2
        /       = select_year(Date.today.year, {start_year: Date.today.year, end_year: Date.today.year + 4}, class: 'form-control')
        %fieldset.actions.control-group.col-sm-offset-2
          .controls
            = f.submit( "Sign Up", class: "btn btn-default")
            / %input(type="submit" value="Sign Up" class="btn btn-default")
